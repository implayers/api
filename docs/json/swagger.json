{
  "swagger": "1.0.0",
  "info": {
    "description": "前后端分离优化平台",
    "version": "1.0.0",
    "title": "接口文档",
    "contact": {
      "email": ""
    }
  },
  "host": "www.domain.com",
  "basePath": "/v1",
  "schemes": [
    "https",
    "http"
  ],
  "tags": [
    {
      "name": "基础",
      "description": "多系统公共"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "基础"
        ],
        "summary": "登录账号",
        "description": "登录账号，只能使用手机验证码登录",
        "parameters": [
          {
            "name": "phone",
            "type": "string",
            "in": "query",
            "required": true,
            "description": "手机号码"
          },
          {
            "name": "code",
            "type": "string",
            "in": "query",
            "required": true,
            "description": "验证码"
          }
        ],
        "responses": {
          "200": {
            "description": "登录成功",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string",
                  "description": "Token密钥"
                }
              }
            }
          },
          "400": {
            "description": "参数无效",
            "schema": {
              "$ref": "#/definitions/error"
            }
          },
          "404": {
            "description": "用户不存在",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      }
    },
    "/logout": {
      "post": {
        "tags": [
          "基础"
        ],
        "summary": "退出账号",
        "description": "登出账号",
        "parameters": [
          {
            "name": "userId",
            "type": "integer",
            "format": "int32",
            "in": "query",
            "required": true,
            "description": "用户ID"
          }
        ],
        "responses": {
          "200": {
            "description": "退出成功"
          },
          "400": {
            "description": "参数无效",
            "schema": {
              "$ref": "#/definitions/error"
            }
          },
          "404": {
            "description": "用户不存在",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:token",
              "read:token"
            ]
          }
        ]
      }
    },
    "/user/{userId}": {
      "get": {
        "tags": [
          "基础"
        ],
        "summary": "获取用户信息",
        "description": "获取的用户的基本信息",
        "parameters": [
          {
            "name": "userId",
            "type": "integer",
            "format": "int32",
            "in": "path",
            "required": true,
            "description": "用户ID"
          }
        ],
        "responses": {
          "200": {
            "description": "获取用户信息成功",
            "schema": {
              "$ref": "#/definitions/user"
            }
          },
          "400": {
            "description": "参数无效",
            "schema": {
              "$ref": "#/definitions/error"
            }
          },
          "404": {
            "description": "用户不存在",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:token",
              "read:token"
            ]
          }
        ]
      }
    }
  },
  "definitions": {
    "error": {
      "description": "错误模型",
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "description": "错误描述"
        }
      }
    },
    "user": {
      "description": "用户模型",
      "type": "object",
      "properties": {
        "userId": {
          "type": "integer",
          "format": "int32",
          "description": "用户ID"
        },
        "userName": {
          "type": "string",
          "description": "用户名称"
        },
        "nickName": {
          "type": "string",
          "description": "用户昵称"
        },
        "realName": {
          "type": "string",
          "description": "真实姓名"
        },
        "level": {
          "type": "string",
          "description": "用户等级"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "用户权限组"
        },
        "phone": {
          "type": "string",
          "description": "手机号码"
        },
        "theme": {
          "type": "string",
          "description": "横/竖版 default or horizontal"
        },
        "colour": {
          "type": "string",
          "description": "颜色主题 blue , orange , coffee, red, green"
        },
        "createTime": {
          "type": "string",
          "description": "注册时间"
        }
      }
    }
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:token": "写入Toekn",
        "read:token": "读取Token"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "access_token",
      "in": "header"
    }
  },
  "externalDocs": {
    "description": "技术支持",
    "url": "http://swagger.io"
  }
}